<h1>News</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th>Body</th>
      <th>Publication date</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.caption %></td>
        <td><%= news.body %></td>
        <td><%= news.created_at %></td>
        <td><%= news.user.name %></td>
        <%= display_index_news_links(news) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News', new_news_path if user_signed_in? %>
